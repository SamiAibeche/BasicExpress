include header

  body
  include nav
  div(class="container")
    div(class="jumbotron")
      h1!= header_title
      p!= header_text
  div(class="container")
    div(class="row")
      div(class="col-md-12")
        div(class="well well-sm")
          form(class="form-horizontal" action="/contact-me" method="post" enctype="multipart/form-data")
            fieldset
              legend(class="text-center") Contact us
             div(class="form-group col-sm-10")
               label(class="col-md-3 control-label" for="name") Name
               div(class="col-md-9")
                 input(id="name" name="name" type="text" placeholder="Your name" class="form-control")
             div(class="form-group col-sm-10")
               label(class="col-md-3 control-label" for="email") Your E-mail
               div(class="col-md-9")
                 input(id="email" name="email" type="text" placeholder="Your email" class="form-control")
             div(class="form-group col-sm-10")
               label(class="col-md-3 control-label" for="message") Your message
               div(class="col-md-9")
                 textarea(class="form-control" id="message" name="message" placeholder="Please enter your message here..." rows="5")
             div(class="form-group col-sm-10")
               label(class="col-md-3 control-label") Your file
               div(class="col-md-9")
                 input(type="file" name="filetoupload")
             div(class="form-group col-sm-10")
               label(class="col-md-3")
               div(class="col-md-9")
                 button(type="submit" class="btn btn-primary btn-lg pull-right") Submit              
             div(class="form-group")
             - if(msgStatus !== undefined){
               - if(msgStatus==true){
                   div(class="col-xs-12")
                     p(class="text-center") Your message has bent sent successfully 
               - } else {
                  div(class="col-xs-12")
                    p(class="text-center") Oops ! Something's wrong, please try later
               - }
             - }